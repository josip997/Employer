@using System.Web
@model Employer.Models.UpdateDepartmentViewModel
@{
}

<form method="post" action="Add" class="mt-5">

  <h1>Edit department</h1>

  <div class="form-group">
    <input type="hidden" class="form-control" asp-for="Id">
  </div>

  <div class="form-group">
    <label for="" class="form-label">Cipher</label>
    <input type="text" class="form-control" asp-for="Cipher">
    @Html.ValidationMessageFor(x => x.Cipher, null, new {@class="text-danger"})  
  </div>

  <div class="form-group">
    <label for="" class="form-label">Name</label>
    <input type="text" class="form-control" asp-for="Name" asp-action="">
    @Html.ValidationMessageFor(x => x.Name, null, new {@class="text-danger"})  
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>

  <button type="submit" class="btn btn-danger mt-5" 
      asp-action="Delete"
      asp-controller="Departments">Delete</button>
</form>
